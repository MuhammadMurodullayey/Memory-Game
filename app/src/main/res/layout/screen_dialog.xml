<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_gravity="center"
    android:minWidth="380dp"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintWidth_percent="0.8"
    tools:context=".ui.dialogs.MyDialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frem"
        android:layout_width="380dp"
        android:layout_height="180dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="64dp"
            android:fontFamily="monospace"
            android:text="You Win"
            android:textColor="#FFDD00"
            android:textSize="50dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/reload1"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginEnd="60dp"
        android:padding="8dp"
        android:src="@drawable/reload"
        app:layout_constraintBottom_toBottomOf="@id/frem"
        app:layout_constraintEnd_toEndOf="@id/frem"
        app:layout_constraintTop_toBottomOf="@id/frem" />

    <ImageView
        android:id="@+id/menu1"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginStart="60dp"
        android:padding="10dp"
        android:src="@drawable/menu"
        app:layout_constraintBottom_toBottomOf="@id/frem"
        app:layout_constraintStart_toStartOf="@id/frem"
        app:layout_constraintTop_toBottomOf="@id/frem" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/monkey"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/monkey"
        app:layout_constraintBottom_toTopOf="@id/frem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/frem" />
</androidx.constraintlayout.widget.ConstraintLayout>